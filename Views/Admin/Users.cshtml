@model IEnumerable<(string Id, string Email, string Role)>
@{
    ViewData["Title"] = "User Management";
}
<h2>User Management</h2>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Email</th>
            <th>Role</th>
            <th>Change</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.Email</td>
            <td>@user.Role</td>
            <td>
                <form asp-action="UpdateRole" method="post" class="d-flex gap-2">
                    <input type="hidden" name="userId" value="@user.Id" />
                    <select name="role" class="form-select form-select-sm" style="width: 160px;">
                        <option value="Jobseeker" selected="@(user.Role == "Jobseeker")">Jobseeker</option>
                        <option value="Recruiter" selected="@(user.Role == "Recruiter")">Recruiter</option>
                        <option value="Admin" selected="@(user.Role == "Admin")">Admin</option>
                    </select>
                    <button type="submit" class="btn btn-sm btn-primary">Save</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>