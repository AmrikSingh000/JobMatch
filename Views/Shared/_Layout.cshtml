<!-- this page is the Shared view (_Layout.cshtml). keeping the layout simple for the capstone demo. -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - JobMatch</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <nav class="navbar navbar-expand-lg bg-white">
      <div class="container">
        <a class="navbar-brand" asp-controller="Home" asp-action="Index"><i class="bi bi-briefcase-fill me-2"></i>JobMatch</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#nav"><span class="navbar-toggler-icon"></span></button>
        <div class="collapse navbar-collapse" id="nav">
          <ul class="navbar-nav me-auto">
            <li class="nav-item"><a class="nav-link" asp-controller="Jobs" asp-action="Index">Find Jobs</a></li>
            @if (User.IsInRole("Recruiter"))
            {
              <li class="nav-item"><a class="nav-link" asp-controller="Jobs" asp-action="Create">Post a Job</a></li>
              <li class="nav-item"><a class="nav-link" asp-controller="Jobs" asp-action="MyPosts">My Job Posts</a></li>
            }
            @if (User.IsInRole("Administrator"))
            {
              <li class="nav-item"><a class="nav-link" asp-controller="Admin" asp-action="Users">Admin</a></li>
            }
            @if (User.IsInRole("Jobseeker"))
            {
              <li class="nav-item"><a class="nav-link" asp-controller="Resumes" asp-action="Upload">Upload CV</a></li>
              <li class="nav-item"><a class="nav-link" asp-controller="Resumes" asp-action="Matches">Matches</a></li>
            }
          @if (User.Identity?.IsAuthenticated ?? false)
{
    if (User.IsInRole("Jobseeker"))
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Dashboard" asp-action="Jobseeker">Dashboard</a>
        </li>
    }
    if (User.IsInRole("Recruiter"))
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Dashboard" asp-action="Recruiter">Dashboard</a>
        </li>
    }
    if (User.IsInRole("Admin"))
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Dashboard" asp-action="Admin">Dashboard</a>
        </li>
    }
}

</ul>
          <partial name="_LoginPartial" />
        </div>
      </div>
    </nav>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>